@model Game
@inject Data data

<form action="EditGame" method="post">
    <input type="hidden" name="StringId" value="@Model.Id">
    <label for="Name">Name</label>
    <input type="text" name="Name" value="@Model.Name"/><br>

    <label for="Year">Year</label>
    <input type="text" name="Year" value="@Model.Year"/><br>

    <label for="Country">Country</label>
    <select name="Country" id="Country">
        @foreach (var item in data.GetCountries())
        {
            if(Model.Country == item.StringId)
            {
                <option value="@item.Id" selected>@item.Name</option>
            }
            else
            {
                <option value="@item.Id">@item.Name</option>
            }
        }
    </select>

    <label for="Genre">Genre</label>
    <select name="Genre" id="Genre">
        @foreach (var item in data.GetGenres())
        {
            if(Model.Genre == item.StringId)
            {
                <option value="@item.Id" selected>@item.Name</option>
            }
            else
            {
                <option value="@item.Id">@item.Name</option>
            }
        }
    </select>

    <label for="Publisher">Publisher</label>
    <select name="Publisher" id="Publisher">
        @foreach (var item in data.GetPublishers())
        {
            if(Model.Publisher == item.StringId)
            {
                <option value="@item.Id" selected>@item.Name</option>
            }
            else
            {
                <option value="@item.Id">@item.Name</option>
            }
        }
    </select>

    <input type="submit" value="Edit!">
</form>