@inject Data data
@{
    ViewData["Title"] = "My Super Server";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create">Add new game!</a>

@foreach (var item in data.GetGames())
{
    <p>@item</p>
    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
    <a asp-action="Remove" asp-route-id="@item.Id">Delete</a>
}